<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<!-- 开启动态方法调用 -->
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<!-- 开启开发者模式 -->
	<constant name="struts.devMode" value="true" />
	<!-- 开启国际化 -->
	<!-- <constant name="struts.custom.i18n.resources" value="com.my.action.EmpAction"/> -->

	<package name="oa" extends="struts-default">
		<action name="index">
			<result>/index.jsp</result>
		</action>
		<!-- 员工模块 -->
		<action name="ea!*" class="com.gump.action.EmployeeAction"
			method="{1}">
			<result name="tolist">/html/StaffManagement/StaffList.jsp</result>
			<result name="toupdate">/html/StaffManagement/StaffUpdate.jsp</result>
			<result name="toadd">/html/StaffManagement/StaffAdd.jsp</result>
			<allowed-methods>getAllEmp,getEmpById,doUpdate,toAdd,doAdd,doDelete</allowed-methods>
		</action>
		
		<action name="editUserInfoUI_*" class="com.gump.action.EditEmployeeInfoAction" method="{1}">
			<result name="editUserInfoUI">/html/Person_Config/editUserInforUI.jsp</result>
		</action>
	
		<action name="editPasswordUI" class="com.gump.action.ModifyEmployeePasAction">
			<result name="modify">/html/Person_Config/editPasswordUI.jsp</result>
		</action>
		
		<!-- 职位模块 -->
		<action name="pa!*" class="com.gump.action.PositionAction" method="{1}">
			<result name="toPositionList">/html/PositionSystem/PositionList.jsp</result>
			<result name="goUpdatePage">/html/PositionSystem/PositionUpdate.jsp</result>
			<result name="goAddPage">/html/PositionSystem/PositionAdd.jsp</result>
			<allowed-methods>getPositionById,getPositionByName,listPosition,updatePosition,goUpdatePositionPage,addPosition,goAddPositionPage,removePosition</allowed-methods>
		</action>
		<!-- 信息模块 -->
		<action name="ma!*" class="com.gump.action.MessageAction"
			method="{1}">
			<result name="">/demo.jsp</result>
			<allowed-methods>add,edit,……</allowed-methods>
		</action>
		<!-- 公文模块 -->
		<action name="da!*" class="com.gump.action.DocumentAction"
			method="{1}">
			<result name="success">/success.jsp</result>
			<allowed-methods>add,remove,modify,saveinquery</allowed-methods>
		</action>
		<!-- 公告模块 -->
		<action name="na!*" class="com.gump.action.NotListAction"
			method="{1}">
			<result type="dispatcher" name='success'>LanDisk_Folder/list.jsp
			</result>
			<result name='sb'>list.jsp</result>
			<result name='bs'>list.jsp</result>
			<result name='fail'>list.jsp</result>
			<allowed-methods>execute,delete,add,update</allowed-methods>
		</action>
		<!-- 部门模块 -->
		<action name="DepartmentAction!*" class="com.gump.action.DepartmentAction" method="{1}">
			<result name="success">/html/DepartmentSystem/DepartmentList.jsp</result>
			<result name="success1" type='redirectAction'>
				<param name="actionName">DepartmentAction!depList</param>
				<param name="namespace">/</param>
			</result>
			<result name="success3">/html/DepartmentSystem/DepartmentUpdate.jsp</result>
			<result name="success4">/html/DepartmentSystem/DepartmentSelect.jsp</result>
			<allowed-methods>depList,addDep,updateDep,getName,selectByName,selectById,deleteDep</allowed-methods>
		</action>
	</package>
</struts>

