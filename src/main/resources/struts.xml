<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	
	<!-- 开启动态方法调用-->
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<!-- 开启开发者模式 -->
    <constant name="struts.devMode" value="true" />
    <!-- 开启国际化 -->
	<!-- <constant name="struts.custom.i18n.resources" value="com.my.action.EmpAction"/> -->
	
	<package name="oa" extends="struts-default">
		<action name="index">
			<result>/index.jsp</result>
		</action>
		<!-- 员工模块 -->
		<action name="ea!*" class="com.gump.action.EmployeeAction" method="{1}">
			<result name="empList">/html/StaffManagement/StaffList.jsp</result>
			<result name="toEdit">/html/StaffManagement/StaffUpdate.jsp</result>
			<result name="toAdd">/html/StaffManagement/StaffAdd.jsp</result>
			<allowed-methods>getAllEmp</allowed-methods>
		</action>
		<!-- 职位模块 -->
		<action name="pa!*" class="com.gump.action.PositionAction" method="{1}">
			<result name="">/demo.jsp</result>
			<allowed-methods>add,edit,……</allowed-methods>
		</action>
		<!-- 信息模块 -->
		<action name="ma!*" class="com.gump.action.MessageAction" method="{1}">
			<result name="">/demo.jsp</result>
			<allowed-methods>add,edit,……</allowed-methods>
		</action>
		<!-- 公文模块 -->
		<action name="da!*" class="com.gump.action.DocumentAction" method="{1}">
			<result name="">/demo.jsp</result>
			<allowed-methods>add,edit,……</allowed-methods>
		</action>
		<!-- 公告模块 -->
		<action name="na!*" class="com.gump.action.NotListAction" method="{1}">
			<result name="">/demo.jsp</result>
			<allowed-methods>add,edit,……</allowed-methods>
		</action>
		<!-- 部门模块 -->
		<action name="dep!*" class="com.gump.action.DepartmentAction" method="{1}">
			<result name="">/demo.jsp</result>
			<allowed-methods>add,edit,……</allowed-methods>
		</action>
	</package>
</struts>

